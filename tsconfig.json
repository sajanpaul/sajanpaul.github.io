{
	"extends": "./tsconfig.dev",
	// "extends": "tsconfig.prod.json",
	"compilerOptions": {
		"noImplicitAny": true,
		"preserveConstEnums": true,
		"watch": true,
		"alwaysStrict":true,
		"forceConsistentCasingInFileNames":true,
		"pretty":true,
		"preserveWatchOutput": false,
		"experimentalDecorators": true,
	},
	"include": [
		"./types/" ,
		 "src/**/*",
	],
	"exclude": [
		"out-dist",
		"run-build",
		"node_modules",
		"build-server",
		".vscode"
	],

	"allowJS": false
}
